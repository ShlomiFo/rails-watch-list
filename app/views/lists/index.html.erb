    <%= link_to 'create new list', "new_list_path", class: "btn btn-primary align-items-left " %>
</div>
 <div class="row p-3">
    <% @lists.each do |list| %>
      <div class="col-sm">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('cinema.jpg')%>)">
             <%= link_to list.name, list_path(list), class: "text-decoration-none text-white" %>
         </div>
     </div>
    <% end %>
  </div>

<br>
